---
interface Props {
  title: string;
  description?: string;
}

const { title, description } = Astro.props;
---

<div class="flex flex-col gap-6">
  <div class="flex flex-col gap-2">
    <h1 class="text-2xl font-semibold">{title}</h1>
    {description && <p class="text-neutral-400">{description}</p>}
  </div>

  <slot />
</div>
